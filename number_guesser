# Number guessing game

from random import randint
guesscount = 3

userlower = input("Whaddup dork! Enter your lower bound: ")
userupper = input("Enter your upper bound: ")
userupper = int(userupper)
userlower = int(userlower)

while True:
    level = input("Enter your difficulty level (easy, normal, or hard): ")
    if level == 'easy':
        guesscount = userupper - userlower
        break
    elif level == 'normal':
        guesscount = (userupper - userlower) // 2
        break
    elif level == 'hard':
        guesscount = 3
        break
    else:
        print('Following instructions isn\'t your strong suit is it, dumbass?')
    

print(f'userlower: {userlower}')
print(f'userupper: {userupper}')
print()

target = randint(userlower, userupper)

while guesscount > 0:
    guess = int(input("Guess, bitch! "))
    if guess not in range(userlower, userupper+1):
        print('Out of bounds, motherfucker! Try again.')
    if guess == target:
        print(f'You win, bitch! It took you {guesscount} guesses.')
        break
    elif guess > target:
        print('Too high, motherfucker! Guess again.')
    elif guess < target:
        print('Too low, motherfucker! Guess again.')
    guesscount -= 1
    print(f'You have {guesscount} guesses left. ')

if guesscount <= 0:
    print("You lose, bitch!")